<?xml version="1.0" encoding="utf-8"?>
<set android:duration="5000" xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360"/>
    <translate
        android:fromXDelta="0"
        android:toXDelta="-300%"/>
    <alpha
        android:fromAlpha="0"
        android:toAlpha="1"/>
    <scale android:fromXScale="0.1"
        android:fromYScale="0.1"
        android:toYScale="100%"
        android:toXScale="100%"
        android:pivotX="50%"
        android:pivotY="50%"/>
</set>